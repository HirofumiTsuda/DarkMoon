<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/status_layout"
    android:background="@color/status_background">
    <RelativeLayout
        android:layout_width="74dp"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:src="@drawable/darkmoon"
            android:id="@+id/userIcon"
            android:padding="8dp"/>
        <ImageView
            android:paddingLeft="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"
            android:id="@+id/retweetUserIcon"
            android:layout_below="@id/userIcon"
            android:layout_alignLeft="@id/userIcon"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingTop="10dp"
            android:paddingLeft="6dp"
            android:id="@+id/retweetMark"
            android:src="@drawable/chat_comment_oval_speech_bubble_with_text_lines_32"
            android:layout_below="@id/userIcon"
            android:layout_alignRight="@id/userIcon"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="userID"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/userName"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/lock"
                android:src="@drawable/locked_padlock_16"
                android:layout_toRightOf="@id/userName"/>
            <View
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:paddingLeft="10dp"
                android:layout_centerInParent="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="time"
                android:textSize="10dp"
                android:textColor="#ffffff"
                android:id="@+id/time"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tweet"
            android:textColor="#ffffff"
            android:id="@+id/tweetText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="via"
            android:textSize="10dp"
            android:textColor="#ffffff"
            android:id="@+id/client"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="retweet"
            android:textSize="10dp"
            android:textColor="#ffffff"
            android:id="@+id/retweetText"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:paddingTop="10dp"
        android:layout_gravity="top"
        android:id="@+id/star"
        android:src="@drawable/star"/>
    </LinearLayout>



</LinearLayout>
